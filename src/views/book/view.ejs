<!doctype html>
<html lang="ru">
    <%- include('../components/head')  %>
    <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
    <body>
        <div class="container">
            <%- include('../components/header') %>
            <main class="jumbotron jumbotron-fluid">
                <h1><%= title %></h1>
                <div class="row">
                    <div class="col-sm-8">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= book.title %></h5>
                                <p class="card-text"><%= book.description %></p>
                                <div class="text-right">
                                    <a class="btn btn-sm btn-primary" href="/books/update/<%= book.id %>">
                                        <i class="fa fa-pencil" aria-hidden="true"></i>
                                    </a>
                                    <form action="/books/delete/<%= book.id %>" method="POST" class="d-inline">
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4">
                        <div id="list" class="list-group">

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <div class="form-group">
                                <label for="username">Пользователь</label>
                                <input placeholder="Имя пользователя" type="text" id="username" style="width: 300px" class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label for="text">Сообщение</label>
                                <textarea placeholder="Ваше сообщение" id="text" style="width: 300px" class="form-control" ></textarea>
                            </div>
                            <button type="submit" id="send-room" class="btn btn-primary">Оставить комментарий</button>
                        </div>
                    </div>
                </div>

            </main>

            <script>
                const roomName = location.pathname.at(-1);
                const socket = io.connect("/", {query: `roomName=${roomName}`});

                const boxlist = document.getElementById("list");
                const username = document.getElementById("username");
                const text = document.getElementById("text");
                const sendRoom = document.getElementById("send-room");

                const getTmp = (message) => {
                    return `
                            <div class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <small>
                                        ${message.username}
                                    </small>
                                    <small class="text-muted">
                                        ${message.type}
                                    </small>
                                    <p class="mb-1">
                                        ${message.text}
                                    </p>
                                </div>
                            </div>
                    `
                };

                socket.on("message-to-room", msg => {
                    const div = getTmp(msg);
                    boxlist.insertAdjacentHTML('beforeend', div);
                });

                sendRoom.addEventListener("click", (e) => {
                    socket.emit("message-to-room", {
                        username: username.value,
                        text: text.value,
                    })
                })

            </script>

            <%- include('../components/footer') %>
        </div>
    </body>
    </html>
