<!doctype html>
    <html lang="ru">
    <%- include('../components/head')  %>
    <body>
        <div class="container">
            <%- include('../components/header') %>
            <main class="jumbotron jumbotron-fluid">
                <h1><%= title %></h1>
                <a class="btn btn-sm btn-primary" href="books/create">Добавить запись</a>
                <% if(books.length) { %>
                    <table class="table table-striped table-sm  mt-3">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Название</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        <% books.map((el, idx) => {  %>
                            <tr>
                                <th scope="row"><%= idx +1 %></th>
                                <td><%= el.title %></td>
                                <td class="text-right">
                                    <a class="btn btn-sm btn-success" href="/books/<%= el.id %>">
                                        <i class="fa fa-eye" aria-hidden="true"></i>
                                    </a>
                                    <a class="btn btn-sm btn-primary" href="/books/update/<%= el.id %>">
                                        <i class="fa fa-pencil" aria-hidden="true"></i>
                                    </a>
                                    <form action="/books/delete/<%= el.id %>" method="DELETE" class="d-inline">
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h3 class="mt-5">Книги отсутствуют</h3>
                <% } %>

            </main>
            <%- include('../components/footer') %>
        </div>
    </body>
</html>
